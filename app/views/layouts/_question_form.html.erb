<%= form_for Question.new do |f| %> 
  <div>
    <%= f.label :title %></br>
    <%= f.text_field :title, :placeholder => "Title" %>
  </div>
  <div>
    <%= f.label :body %></br>
    <%= f.text_area :body, :placeholder => "Enter your question here" %>
  </div>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.submit "Submit" %>
<% end %>

